package javaprogramme1;
import java.util.Scanner;
public class movieticketbooking {

	public static void main(String[] args) {
		
		System.out.println("**** Welcome to Book my show****");
        System.out.println("Enter the no. of movie ticket booking: ");
        
      
        Scanner scanner = new Scanner(System.in);
        int numtickets = scanner.nextInt();
        int Normal_price = 100;
        
		 
	        // Get input from the user
	        System.out.print("Type of ticket to book: ");
	        int numTickets = scanner.nextInt();
	        
		 
		 switch (numtickets ) {
		 case 1:
			 System.out.println("you can book normal ticket with 100"); 
			 int totalCost = numtickets * Normal_price;
			  
			 break;
			 
		 case 2:
			 System.out.println("you can book balcony ticket with 150");  
			 break;
		 case 3:
			 System.out.println("you can book recliner ticket with 200");  
			 break;
			 default:
				 System.out.println("none of the above");  
				 
				 
				 scanner.close();// Close the scanner

			        
			        System.out.println("Thank you for booking with us!");  
		

	}

}
}

